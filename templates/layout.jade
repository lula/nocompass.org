doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      <!-- link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Ubuntu') -->
      link(rel='stylesheet', href='/css/main.css')
      link
  body(class=bodyclass)
    div.pure-g-r(id='main-content', role='main')
      aside.pure-u-1-3(id='main-sidebar', background-image:url(''))
        section.sidebar-data-holder
          div.spinner(role='spinner')
            div.spinner-icon
          include nav
          div.logo
            a(href="/" title="Back to home")= locals.name
          include owner
          include social
          footer(id="main-footer")
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith 
              | &mdash; Theme inspired by 
              a(href="https://github.com/damianmuti/sticko", title="Sticko", rel="external") Sticko
      section(id="main", class="pure-u-2-3")
        block content
        block footer
        
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    script.
      window.jQuery
    script(src='/js/jquery.fitvids.js')
    script(src='/js/script.js')